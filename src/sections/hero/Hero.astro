---
import { Image } from "astro:assets";
import H1 from "../../assets/images/Hero/Slider1.webp";
---
<section class="relative w-full overflow-hidden mt-[76px]">
  <!-- slider principal -->
  <div
    id="slides"
    class="flex w-[300%] transition-transform duration-700 ease-in-out">
    <!--1-->
    <div class="relative w-1/3 shrink-0 aspect-[16/9] sm:aspect-[21/9]">
      <div class="absolute inset-0 bg-gradient-to-r from-black via-gray-900 to-black"></div>
      <!-- Imagen -->
      <Image
        src={H1}
        alt="Slider1"
        class="h-full w-full object-contain sm:object-cover relative z-10"
        format="webp"/>
    </div>
  </div>
  </section>
